#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

int main(void) {
  
  char arquivo1[20];
  printf("Escreva o nome do primeiro arquivo\n");
  scanf("%s",arquivo1);
  strcat(arquivo1,".txt");
  FILE *arq1 = fopen(arquivo1,"w");
  char texto1[100];
  setbuf(stdin,NULL);
  printf("Digite o conte√∫do do primeiro arquivo:\n");
  fgets(texto1,100,stdin);
  fprintf(arq1,"%s",texto1);

  fclose(arq1);

  char texto2[100];
  FILE *arq2 = fopen("arquivo2.txt","w");
  strcpy(texto2,texto1);
  
  for (int i=0;i<strlen(texto2);i++){
    texto2[i] = toupper(texto2[i]);
  }
  fprintf(arq2,"%s",texto2);

  fclose(arq2);
  
  return 0;
}
